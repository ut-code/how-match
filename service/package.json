{
  "name": "service",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "sync": "bun run cf-typegen",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types && if command -v deno >/dev/null; then deno fmt ./worker-configuration.d.ts; fi",
    "db": "bun run --env-file=../.env drizzle-kit --config=./config/drizzle.config.ts",
    "d1": "bun run --env-file=../.env drizzle-kit --config=./config/d1.drizzle.config.ts",
    "dev:local": "DB_KIND=local bun run dev",
    "dev:tmp": "DB_KIND=memory bun run dev",
    "dev:remote": "DB_KIND=remote bun run dev",
    "dev": "bun run --watch ./src/index.ts",
    "check:type": "bun run tsc",
    "build": "bun run tsc"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.6.4",
    "@cloudflare/workers-types": "^4.20250204.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/bun": "latest",
    "drizzle-kit": "^0.30.2",
    "wrangler": "^3.107.3"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@hono/valibot-validator": "^0.5.2",
    "@libsql/client": "^0.14.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.6.19",
    "sqlite3": "^5.1.7",
    "valibot": "^1.0.0-rc.1"
  }
}
