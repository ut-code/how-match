{
  "name": "service",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "prepare": "bun run sync",
    "sync": "bun run cf-typegen",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types && if command -v deno >/dev/null; then deno fmt ./worker-configuration.d.ts; fi",
    "db": "drizzle-kit",
    "dev": "bun run --watch ./cmd/dev.ts",
    "dev:local": "DB_KIND=local bun run --watch ./cmd/dev.ts",
    "dev:tmp": "DB_KIND=memory bun run --watch ./cmd/dev.ts",
    "dev:remote": "DB_KIND=remote bun run --watch ./cmd/dev.ts",
    "check": "bun run tsc"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250204.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/bun": "latest",
    "drizzle-kit": "^0.30.2",
    "wrangler": "^3.107.3",
    "@cloudflare/vitest-pool-workers": "^0.6.4",
    "@hono/zod-validator": "^0.4.2"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.6.19",
    "sqlite3": "^5.1.7",
    "zod": "^3.24.1"
  }
}
